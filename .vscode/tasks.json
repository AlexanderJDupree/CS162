{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "msbuild",
            "args": [
                // Ask msbuild to generate full paths for file names.
                "/property:GenerateFullPaths=true",
                "/t:build"
            ],
            "group": "build",
            "presentation": {
                // Reveal the output only if unrecognized errors occur.
                "reveal": "silent"
            },
            // Use the standard MS compiler pattern to detect errors, warnings and infos
            "problemMatcher": "$msCompile"
        },
        {
            "label" : "Build Program",
            "type" : "shell",
            "command" : "g++",
            "args" : ["-std=c++11", "-g", 
                      "${workspaceFolder}/week7/triangle/point.cpp",  
                      "${workspaceFolder}/week7/triangle/line.cpp", 
                      "${workspaceFolder}/week7/triangle/triangle.cpp", 
                      "${workspaceFolder}/week7/triangle/triangleDriver.cpp", 
                      "-o", "${workspaceFolder}/week7/triangle/main", "-Wall"],
            "group" : {
                "kind" : "build",
                "isDefault" : true
            }
        },
        {
            "label" : "Build Tests",
            "type" : "shell",
            "command" : "g++",
            "args" : ["-std=c++11", "-g", 
                      "${workspaceFolder}/week7/triangle/tests/tests_main.o", 
                      "${workspaceFolder}/week7/triangle/tests/point_tests.cpp", 
                      "${workspaceFolder}/week7/triangle/tests/line_tests.cpp", 
                      "${workspaceFolder}/week7/triangle/tests/triangle_tests.cpp",
                      "${workspaceFolder}/week7/triangle/point.cpp",  
                      "${workspaceFolder}/week7/triangle/line.cpp", 
                      "${workspaceFolder}/week7/triangle/triangle.cpp", 
                      "-o", "${workspaceFolder}/week7/triangle/tests/unitTests", "-Wall"],
        },
        {
            "label" : "Build test_main",
            "type" : "shell",
            "command" : "g++",
            "args" : ["-std=c++11", "-c", 
                      "${workspaceFolder}/week7/triangle/tests/tests_main.cpp", 
                      "-o", "${workspaceFolder}/week7/triangle/tests/tests_main.o", "-Wall"],
        }
    ]
}